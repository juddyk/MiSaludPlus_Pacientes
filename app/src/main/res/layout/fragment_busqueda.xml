<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.appdemo.mi_salud.misaludplus_pacientes.UI_medicamentos.medicamentos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- BOTON DE BUSCAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="end"
                >

                <ImageButton
                    android:id="@+id/btnBsc"
                    android:src="@drawable/buscar"
                    android:scaleType="fitCenter"
                    android:padding="5sp"
                    android:background="@drawable/img_btn"
                    android:visibility="gone"
                    style="@style/imgs1"
                    android:contentDescription="@string/tittle_pas"
                    />
            </LinearLayout>

        <!-- VISTA 1 -->

            <LinearLayout
                android:id="@+id/PARTEI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="100sp"
                        android:background="@drawable/busqueda"
                        android:contentDescription="@string/tittle_pas"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pst_nombre"
                    style="@style/txtSub"/>

                <AutoCompleteTextView
                    android:id="@+id/acMed"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@drawable/round_txt2"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    style="@style/txtBoxAuto"
                    />
                <Button
                    android:id="@+id/csaveSend"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:text="@string/registrar"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/round_btn"
                    style="@style/btnBox"
                    />
            </LinearLayout>

        <!-- VISTA 2 -->

        <RelativeLayout
            android:id="@+id/idMps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
        </RelativeLayout>








    </LinearLayout>

</FrameLayout>